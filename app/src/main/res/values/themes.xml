<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.SketchOnTop" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#03DAC6</item>
    </style>

    <!-- Transparent fullscreen theme for overlay Activity -->
    <style name="Theme.SketchOnTop.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Make window transparent -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        
        <!-- Fullscreen flags -->
        <item name="android:windowFullscreen">true</item>
        
        <!-- Colors -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#03DAC6</item>
    </style>

</resources>

