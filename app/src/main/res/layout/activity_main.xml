<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Drawing canvas - full screen -->
    <com.sketchontop.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Minimized floating button - shown when toolbar is collapsed -->
    <ImageButton
        android:id="@+id/btnExpand"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/toolbar_background"
        android:contentDescription="Expand toolbar"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_pen"
        app:tint="@color/toolbar_icon_tint" />

    <!-- Floating toolbar - positioned at top right -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/toolbar_background"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Top actions: minimize, hide, close -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMinimize"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Minimize"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_minimize"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnToggleVisibility"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Toggle drawings"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_visibility"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/close"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_close"
                app:tint="#FFFF5252" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Mode toggles: Draw mode, S Pen mode -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDrawMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Toggle draw mode"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_draw_mode"
                app:tint="#FF4CAF50" />

            <ImageButton
                android:id="@+id/btnSPenMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="S Pen only mode"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_stylus"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnGradientMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Gradient brush"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_gradient"
                app:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Tool selection row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/pen"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_pen"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnHighlighter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/highlighter"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_highlighter"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/eraser"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_eraser"
                app:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Color picker gradient -->
        <View
            android:id="@+id/colorPickerGradient"
            android:layout_width="108dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient_color_picker" />

        <!-- Current color indicator -->
        <View
            android:id="@+id/currentColorIndicator"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@color/black" />

        <!-- Gradient preset selector (shown when gradient mode is on) -->
        <HorizontalScrollView
            android:id="@+id/gradientPresetsContainer"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/gradientPresets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Stroke width slider -->
        <SeekBar
            android:id="@+id/strokeWidthSeekBar"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="8"
            android:progressTint="@color/white"
            android:thumbTint="@color/white" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Action buttons row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/undo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_undo"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/redo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_redo"
                app:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="@string/clear"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_clear"
                app:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
