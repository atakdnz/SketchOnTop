<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Minimized floating button -->
    <ImageButton
        android:id="@+id/btnExpand"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/toolbar_background"
        android:contentDescription="Expand toolbar"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/ic_pen"
        android:tint="@color/toolbar_icon_tint" />

    <!-- Floating toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Top actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMinimize"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Minimize"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_minimize"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Settings"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnToggleVisibility"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Toggle drawings"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_visibility"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Close"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close"
                android:tint="#FFFF5252" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Mode toggles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDrawMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Draw mode"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_draw_mode"
                android:tint="#FF4CAF50" />

            <ImageButton
                android:id="@+id/btnSPenMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="S Pen mode"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_stylus"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnGradientMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Gradient"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gradient"
                android:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Tools -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Pen"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pen"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnHighlighter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Highlighter"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_highlighter"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Eraser"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_eraser"
                android:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Brush Preview (tap to open color picker page) -->
        <FrameLayout
            android:id="@+id/btnOpenColorPicker"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="#40000000">

            <View
                android:id="@+id/brushPreview"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/brush_preview_circle" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Stroke width -->
        <SeekBar
            android:id="@+id/strokeWidthSeekBar"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="8"
            android:progressTint="@color/white"
            android:thumbTint="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Undo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_undo"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Redo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_redo"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Clear"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_clear"
                android:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

    </LinearLayout>

    <!-- Color Picker Page (hidden by default, swaps with toolbar) -->
    <LinearLayout
        android:id="@+id/colorPickerPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnColorPickerBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/tool_button_background"
            android:contentDescription="Back"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close"
            android:tint="@color/toolbar_icon_tint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Color Grid Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View android:id="@+id/colorPick1" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FF000000" />
            <View android:id="@+id/colorPick2" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FFFFFFFF" />
            <View android:id="@+id/colorPick3" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FFFF0000" />
        </LinearLayout>

        <!-- Color Grid Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View android:id="@+id/colorPick4" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FF00FF00" />
            <View android:id="@+id/colorPick5" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FF0000FF" />
            <View android:id="@+id/colorPick6" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FFFFFF00" />
        </LinearLayout>

        <!-- Color Grid Row 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View android:id="@+id/colorPick7" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FFFF00FF" />
            <View android:id="@+id/colorPick8" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FF00FFFF" />
            <View android:id="@+id/colorPick9" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="2dp" android:background="#FFFF8000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Rainbow Slider -->
        <View
            android:id="@+id/rainbowSlider"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient_color_picker" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Gradient Presets Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gradients"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Gradient Preset Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View android:id="@+id/gradientRainbow" android:layout_width="36dp" android:layout_height="24dp" android:layout_margin="2dp" android:background="@drawable/gradient_rainbow" />
            <View android:id="@+id/gradientFire" android:layout_width="36dp" android:layout_height="24dp" android:layout_margin="2dp" android:background="@drawable/gradient_fire" />
            <View android:id="@+id/gradientOcean" android:layout_width="36dp" android:layout_height="24dp" android:layout_margin="2dp" android:background="@drawable/gradient_ocean" />
        </LinearLayout>

        <!-- Gradient Preset Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View android:id="@+id/gradientSunset" android:layout_width="36dp" android:layout_height="24dp" android:layout_margin="2dp" android:background="@drawable/gradient_sunset" />
            <View android:id="@+id/gradientForest" android:layout_width="36dp" android:layout_height="24dp" android:layout_margin="2dp" android:background="@drawable/gradient_forest" />
            <View android:id="@+id/gradientNeon" android:layout_width="36dp" android:layout_height="24dp" android:layout_margin="2dp" android:background="@drawable/gradient_neon" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
