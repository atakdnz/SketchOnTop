<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Minimized floating button -->
    <ImageButton
        android:id="@+id/btnExpand"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/toolbar_background"
        android:contentDescription="Expand toolbar"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/ic_pen"
        android:tint="@color/toolbar_icon_tint" />

    <!-- Floating toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Top actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMinimize"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Minimize"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_minimize"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Settings"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnToggleVisibility"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Toggle drawings"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_visibility"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Close"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close"
                android:tint="#FFFF5252" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Mode toggles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDrawMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Draw mode"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_draw_mode"
                android:tint="#FF4CAF50" />

            <ImageButton
                android:id="@+id/btnSPenMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="S Pen mode"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_stylus"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnGradientMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Gradient"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gradient"
                android:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Tools -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPen"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Pen"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pen"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnHighlighter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Highlighter"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_highlighter"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Eraser"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_eraser"
                android:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Quick Color Presets -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:id="@+id/colorBlack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="#FF000000" />

            <View
                android:id="@+id/colorWhite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="#FFFFFFFF" />

            <View
                android:id="@+id/colorRed"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="#FFFF0000" />

            <View
                android:id="@+id/colorBlue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="#FF0000FF" />

            <View
                android:id="@+id/colorGreen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="#FF00FF00" />

            <View
                android:id="@+id/colorYellow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:background="#FFFFFF00" />

        </LinearLayout>

        <!-- Brush Preview + Custom Picker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Brush preview - shows color and size -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#40000000">

                <View
                    android:id="@+id/brushPreview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/brush_preview_circle" />

            </FrameLayout>

            <!-- Rainbow slider for custom color -->
            <View
                android:id="@+id/colorPickerGradient"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/gradient_color_picker" />

        </LinearLayout>

        <!-- Gradient presets -->
        <HorizontalScrollView
            android:id="@+id/gradientPresetsContainer"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/gradientPresets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Stroke width -->
        <SeekBar
            android:id="@+id/strokeWidthSeekBar"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="8"
            android:progressTint="@color/white"
            android:thumbTint="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="#40FFFFFF" />

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Undo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_undo"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Redo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_redo"
                android:tint="@color/toolbar_icon_tint" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/tool_button_background"
                android:contentDescription="Clear"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_clear"
                android:tint="@color/toolbar_icon_tint" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
